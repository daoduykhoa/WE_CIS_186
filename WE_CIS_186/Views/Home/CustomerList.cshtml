@model IEnumerable<WE_CIS_186.Models.CustomerInf>
@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="og_table">
    <div style="display: flex; justify-content: center">
        <p style="color: white; font-size: 20px;line-height: 20px;">DANH SÁCH KHÁCH HÀNG</p>&nbsp;&nbsp;&nbsp;&nbsp;
        <select id="listTime">
            <option>---Tháng---</option>
            @foreach (var item in Model)
            {
                <option>@item.Kangz</option>
            }
        </select>
    </div>
    <div class="KangAlert">
        <div>
            <p style="color: red; font-size: 15px;">Giao diện này chưa hỗ trợ thiết bị di động</p>
        </div>
    </div>
    <section class="CustomerList0">
        <div class="tbl-header">
            <table class="fixmobile" cellpadding="0" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Họ và tên</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Ref.</th>
                        <th>Code</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="tbl-content">
            <table cellpadding="0" cellspacing="0" border="0" class="table-hover">
                <tbody>
                    @{
                        int i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.DoB</td>
                                <td>@item.Address</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Misc</td>
                                <td>@item.PreCode</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>



<link href="~/Library/css/nice-select.css" rel="stylesheet" />
<script src="~/Library/js/jquery.nice-select.js"></script>
<script src="~/Library/js/jquery.min.js"></script>
<link href="~/Library/css/bootstrap.min.css" rel="stylesheet" />
<script>
    $('.listTime').niceSelect();
    var usedNames = {};
    $("select[id='listTime'] > option").each(function () {
        if (usedNames[this.text]) {
            $(this).remove();
        } else {
            usedNames[this.text] = this.value;
        }
    });
    $(window).on("load resize ", function () {
        var scrollWidth = $(".tbl-content").width() - $(".tbl-content table").width();
        $(".tbl-header").css({ "padding-right": scrollWidth });
    }).resize();
    $('.tbl-header').on('scroll', function () { $('.fixmobile').css('top', $(this).scrollTop()); });
</script>